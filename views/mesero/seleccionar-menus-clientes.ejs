<%- include('../partials/header') %>

    <style>
        .cliente-menu-card {
            transition: all 0.3s ease;
            border: 2px solid #dee2e6;
        }

        .cliente-menu-card.selected {
            border-color: #0d6efd;
            background-color: #f8f9fa;
        }

        .menu-option {
            cursor: pointer;
            transition: all 0.2s ease;
            border: 2px solid #dee2e6;
        }

        .menu-option:hover {
            border-color: #0d6efd;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .menu-option.selected {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }

        .menu-option input[type="radio"] {
            transform: scale(1.3);
        }
    </style>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-clipboard-check me-2"></i>
                            Seleccionar Menú por Cliente - Mesa <%= mesa.numero %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <p class="lead text-center mb-4">
                            Por favor, seleccione el tipo de menú para cada cliente:
                        </p>

                        <form id="menu-selection-form" method="POST"
                            action="/mesero/seleccionar-menus-clientes/<%= mesa.id %>">
                            <input type="hidden" name="cantidadClientes" value="<%= cantidadClientes %>">

                            <div class="row g-4">
                                <% for (let i=1; i <=cantidadClientes; i++) { %>
                                    <div class="col-md-6">
                                        <div class="card cliente-menu-card h-100">
                                            <div class="card-header bg-light">
                                                <h5 class="mb-0">
                                                    <i class="bi bi-person-fill me-2"></i>Cliente <%= i %>
                                                </h5>
                                            </div>
                                            <div class="card-body">
                                                <% if (menus.length> 0) { %>
                                                    <% menus.forEach(menu=> { %>
                                                        <div class="menu-option p-3 mb-3 rounded"
                                                            data-cliente="<%= i %>" data-menu-id="<%= menu.id %>">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="radio"
                                                                    name="cliente_<%= i %>_menu"
                                                                    id="cliente<%= i %>_menu<%= menu.id %>"
                                                                    value="<%= menu.id %>" required>
                                                                <label class="form-check-label w-100"
                                                                    for="cliente<%= i %>_menu<%= menu.id %>"
                                                                    style="cursor: pointer;">
                                                                    <div
                                                                        class="d-flex justify-content-between align-items-center">
                                                                        <div>
                                                                            <h6 class="mb-1">
                                                                                <%= menu.nombre %>
                                                                            </h6>
                                                                            <small class="text-muted">Precio Base: $<%=
                                                                                    menu.precio_base %></small>
                                                                        </div>
                                                                        <i
                                                                            class="bi bi-check-circle-fill text-primary d-none check-icon"></i>
                                                                    </div>
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <div class="alert alert-warning">
                                                                    No hay menús activos disponibles.
                                                                </div>
                                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="mt-4 d-flex justify-content-between">
                                <a href="/mesero" class="btn btn-secondary btn-lg">
                                    <i class="bi bi-arrow-left me-2"></i>Volver al Mapa
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg" id="continuar-btn" disabled>
                                    <i class="bi bi-arrow-right-circle me-2"></i>Continuar al Pedido
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log("✅ Selección de menús por cliente iniciada");

            const form = document.getElementById('menu-selection-form');
            const continuarBtn = document.getElementById('continuar-btn');
            const cantidadClientes = parseInt('<%= cantidadClientes %>');

            // Manejar clicks en las opciones de menú
            document.querySelectorAll('.menu-option').forEach(option => {
                option.addEventListener('click', function () {
                    const radio = this.querySelector('input[type="radio"]');
                    radio.checked = true;

                    // Actualizar estilos visuales
                    const cliente = this.dataset.cliente;
                    document.querySelectorAll(`.menu-option[data-cliente="${cliente}"]`).forEach(opt => {
                        opt.classList.remove('selected');
                        opt.querySelector('.check-icon').classList.add('d-none');
                    });

                    this.classList.add('selected');
                    this.querySelector('.check-icon').classList.remove('d-none');

                    // Marcar la tarjeta del cliente como completa
                    const clienteCard = this.closest('.cliente-menu-card');
                    clienteCard.classList.add('selected');

                    checkFormCompletion();
                });
            });

            // Verificar si todos los clientes tienen menú seleccionado
            function checkFormCompletion() {
                let allSelected = true;

                for (let i = 1; i <= cantidadClientes; i++) {
                    const radioSelected = document.querySelector(`input[name="cliente_${i}_menu"]:checked`);
                    if (!radioSelected) {
                        allSelected = false;
                        break;
                    }
                }

                continuarBtn.disabled = !allSelected;

                if (allSelected) {
                    continuarBtn.classList.add('pulse');
                } else {
                    continuarBtn.classList.remove('pulse');
                }
            }

            // Validación antes de enviar
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                // Recopilar las selecciones
                const selecciones = [];
                for (let i = 1; i <= cantidadClientes; i++) {
                    const radioSelected = document.querySelector(`input[name="cliente_${i}_menu"]:checked`);
                    if (radioSelected) {
                        selecciones.push({
                            clienteNumero: i,
                            menuId: radioSelected.value
                        });
                    }
                }

                if (selecciones.length !== cantidadClientes) {
                    alert('Por favor seleccione un menú para todos los clientes.');
                    return;
                }

                console.log("✅ Selecciones:", selecciones);

                // Enviar el formulario
                form.submit();
            });
        });
    </script>

    <style>
        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .pulse {
            animation: pulse 1.5s infinite;
        }
    </style>

    <%- include('../partials/footer') %>