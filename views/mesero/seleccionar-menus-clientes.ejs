<%- include('../partials/header') %>

<div class="container mt-4" style="max-width: 900px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>Configurar Pedido - Mesa <%= mesa.numero %></h4>
            <span class="badge bg-light text-primary fs-6"><%= cantidadClientes %> Personas</span>
        </div>
        
        <div class="card-body bg-light">
            <form action="/mesero/seleccionar-menus-clientes/<%= mesa.id %>" method="POST">
                <input type="hidden" name="cantidadClientes" value="<%= cantidadClientes %>">

                <div class="row g-3">
                    <% for(let i = 1; i <= cantidadClientes; i++) { %>
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <label for="cliente_<%= i %>_menu" class="form-label fw-bold text-primary mb-0">
                                            <i class="fas fa-user me-1"></i> Cliente <%= i %>
                                        </label>

                                        <% if (i === 1 && cantidadClientes > 1) { %>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="aplicarATodos()">
                                                <i class="fas fa-copy"></i> Aplicar a todos
                                            </button>
                                        <% } %>
                                    </div>

                                    <!-- SELECTOR DE MENÚ -->
                                    <select class="form-select menu-selector mb-2" 
                                            name="cliente_<%= i %>_menu" 
                                            id="cliente_<%= i %>_menu" 
                                            required
                                            onchange="mostrarDetalles(this, <%= i %>)">
                                        <option value="" selected disabled>¿Qué va a pedir?</option>
                                        <% menus.forEach(menu => { %>
                                            <option value="<%= menu.id %>" 
                                                    data-resumen="<%= menu.resumen %>"> <!-- AQUÍ ESTÁ EL DATO DEL HINT -->
                                                <%= menu.nombre %> - $<%= parseFloat(menu.precio_base).toLocaleString('es-CO') %>
                                            </option>
                                        <% }); %>
                                    </select>

                                    <!-- HINT / AYUDA VISUAL (Oculto al inicio) -->
                                    <div id="hint_<%= i %>" class="alert alert-info py-2 px-3 small mb-0 d-none">
                                        <i class="fas fa-info-circle me-1"></i> 
                                        <strong class="text-dark">Incluye:</strong> 
                                        <span class="detalle-texto text-secondary"></span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

                <div class="d-grid gap-2 mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-success btn-lg shadow">
                        CONTINUAR A COMPONENTES <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                    <a href="/mesero" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Función para mostrar el hint cuando cambia el select
    function mostrarDetalles(selectElement, clienteIndex) {
        const hintBox = document.getElementById(`hint_${clienteIndex}`);
        const hintText = hintBox.querySelector('.detalle-texto');
        
        // Obtener la opción seleccionada
        const selectedOption = selectElement.options[selectElement.selectedIndex];
        const resumen = selectedOption.getAttribute('data-resumen');

        if (resumen) {
            hintText.textContent = resumen;
            hintBox.classList.remove('d-none');
            hintBox.classList.add('animate__animated', 'animate__fadeIn'); // Animación suave
        } else {
            hintBox.classList.add('d-none');
        }
    }

    // Función para copiar la selección del Cliente 1 a todos
    function aplicarATodos() {
        const primerSelect = document.getElementById('cliente_1_menu');
        const valorSeleccionado = primerSelect.value;

        if (!valorSeleccionado) {
            alert("Seleccione un menú para el Cliente 1 primero.");
            return;
        }

        const todosSelects = document.querySelectorAll('.menu-selector');
        todosSelects.forEach((select, index) => {
            if (index > 0) { // Omitir el primero
                select.value = valorSeleccionado;
                // Disparar manualmente el evento para que se muestre el Hint en todos
                mostrarDetalles(select, index + 1);
            }
        });
    }
</script>

<%- include('../partials/footer') %>