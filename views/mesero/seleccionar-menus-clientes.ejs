<%- include('../partials/header') %>

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Configurar Pedido - Mesa <%= mesa.numero %></h4>
            <span class="badge bg-light text-primary"><%= cantidadClientes %> Personas</span>
        </div>
        
        <div class="card-body">
            <form action="/mesero/seleccionar-menus-clientes/<%= mesa.id %>" method="POST">
                <input type="hidden" name="cantidadClientes" value="<%= cantidadClientes %>">

                <div class="row">
                    <% for(let i = 1; i <= cantidadClientes; i++) { %>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-light bg-light">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-end mb-2">
                                        <label for="cliente_<%= i %>_menu" class="form-label fw-bold mb-0">
                                            <i class="fas fa-user me-1"></i> Cliente <%= i %>
                                        </label>

                                        <!-- BOTÓN MÁGICO: Solo aparece en el Cliente 1 y si hay más de 1 persona -->
                                        <% if (i === 1 && cantidadClientes > 1) { %>
                                            <button type="button" class="btn btn-sm btn-outline-primary py-0" onclick="aplicarATodos()">
                                                <small><i class="fas fa-copy"></i> Aplicar a todos</small>
                                            </button>
                                        <% } %>
                                    </div>

                                    <select class="form-select menu-selector" 
                                            name="cliente_<%= i %>_menu" 
                                            id="cliente_<%= i %>_menu" 
                                            required>
                                        <option value="" selected disabled>Seleccione un menú...</option>
                                        <% menus.forEach(menu => { %>
                                            <option value="<%= menu.id %>">
                                                <%= menu.nombre %> - $<%= parseFloat(menu.precio_base).toLocaleString('es-CO') %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        Continuar <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                    <a href="/mesero" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- SCRIPT PARA COPIAR LA SELECCIÓN -->
<script>
    function aplicarATodos() {
        // 1. Obtener el valor seleccionado en el primer cliente
        const primerSelect = document.getElementById('cliente_1_menu');
        const valorSeleccionado = primerSelect.value;

        if (!valorSeleccionado) {
            alert("Por favor, selecciona primero un menú para el Cliente 1.");
            primerSelect.focus();
            return;
        }

        // 2. Obtener todos los selects de menú (tienen la clase 'menu-selector')
        const todosLosSelects = document.querySelectorAll('.menu-selector');

        // 3. Recorrer y asignar el valor (con una pequeña animación visual)
        todosLosSelects.forEach(select => {
            if (select.id !== 'cliente_1_menu') { // No es necesario hacerlo en el primero
                select.value = valorSeleccionado;
                
                // Efecto visual para confirmar que cambió
                select.style.transition = "background-color 0.3s";
                select.style.backgroundColor = "#d1e7dd"; // Verde clarito
                setTimeout(() => {
                    select.style.backgroundColor = ""; // Volver a normal
                }, 500);
            }
        });
    }
</script>

<%- include('../partials/footer') %>