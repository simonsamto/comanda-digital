<%- include('../partials/header') %>

    <div class="container mt-4">
        <h2>
            <%= pageTitle %>
        </h2>
        <hr>

        <div class="card">
            <div class="card-body">
                <form action="<%= typeof mesa.id !== 'undefined' ? '/admin/mesas/editar/' + mesa.id : '/admin/mesas' %>"
                    method="POST">

                    <div class="mb-3">
                        <label for="numero" class="form-label">NÃºmero de Mesa</label>
                        <input type="number" class="form-control" id="numero" name="numero"
                            value="<%= typeof mesa.numero !== 'undefined' ? mesa.numero : '' %>" placeholder="Ej: 1"
                            required>
                    </div>

                    <div class="mb-3">
                        <label for="capacidad" class="form-label">Capacidad (Personas)</label>
                        <input type="number" class="form-control" id="capacidad" name="capacidad"
                            value="<%= typeof mesa.capacidad !== 'undefined' ? mesa.capacidad : '' %>"
                            placeholder="Ej: 4" required>
                    </div>

                    <a href="/admin/mesas" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar Mesa</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>