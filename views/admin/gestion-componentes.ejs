<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Gestionar Componentes y Grupos</h1>
        <a href="/admin/gestion-menu" class="btn btn-secondary">Volver a Menús</a>
    </div>
    <p class="text-muted">Aquí puede crear y administrar los "ingredientes" base para sus menús.</p>

    <div class="row">
        <!-- ====================================================== -->
        <!-- NUEVA COLUMNA IZQUIERDA: FORMULARIOS DE CREACIÓN      -->
        <!-- ====================================================== -->
        <div class="col-md-4">
            <h4>Añadir Nuevo</h4>
            
            <!-- Formulario para crear un nuevo Grupo -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Nuevo Grupo</h5>
                    <form action="/admin/grupos" method="POST">
                        <div class="mb-3">
                            <label for="nombreGrupo" class="form-label">Nombre del Grupo</label>
                            <input type="text" class="form-control" id="nombreGrupo" name="nombre" placeholder="Ej: Proteínas, Postres" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Crear Grupo</button>
                    </form>
                </div>
            </div>

            <!-- Formulario para crear un nuevo Componente -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Nuevo Componente</h5>
                    <form action="/admin/componentes" method="POST">
                        <div class="mb-3">
                            <label for="nombreComponente" class="form-label">Nombre del Componente</label>
                            <input type="text" class="form-control" id="nombreComponente" name="nombre" placeholder="Ej: Pollo a la Plancha" required>
                        </div>
                        <div class="mb-3">
                            <label for="grupoComponente" class="form-label">Grupo al que pertenece</label>
                            <select class="form-select" id="grupoComponente" name="grupo_id" required>
                                <option value="" selected disabled>Seleccione un grupo...</option>
                                <% grupos.forEach(grupo => { %>
                                    <option value="<%= grupo.id %>"><%= grupo.nombre %></option>
                                <% }); %>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Crear Componente</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ====================================================== -->
        <!-- COLUMNA DERECHA: LISTA DE ELEMENTOS EXISTENTES         -->
        <!-- (Tu código anterior, ahora en la columna derecha)       -->
        <!-- ====================================================== -->
        <div class="col-md-8">
            <h4>Componentes Existentes</h4>
            <% if (grupos.length > 0) { %>
                <% grupos.forEach(grupo => { %>
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <strong><%= grupo.nombre %></strong>
                            <div>
                                <a href="/admin/grupos/editar/<%= grupo.id %>" class="btn btn-warning btn-sm">Editar Grupo</a>
                                <form action="/admin/grupos/eliminar/<%= grupo.id %>" method="POST" class="d-inline" onsubmit="return confirm('¿Está seguro de que desea eliminar este grupo y TODOS sus componentes?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar Grupo</button>
                                </form>
                            </div>
                        </div>
                        <ul class="list-group list-group-flush">
                            <% if (grupo.componentes.length > 0) { %>
                                <% grupo.componentes.forEach(componente => { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <%= componente.nombre %>
                                        <div>
                                            <a href="/admin/componentes/editar/<%= componente.id %>" class="btn btn-outline-warning btn-sm">Editar</a>
                                            <form action="/admin/componentes/eliminar/<%= componente.id %>" method="POST" class="d-inline" onsubmit="return confirm('¿Está seguro de que desea eliminar este componente?');">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">Eliminar</button>
                                            </form>
                                        </div>
                                    </li>
                                <% }); %>
                            <% } else { %>
                                 <li class="list-group-item text-muted fst-italic">No hay componentes en este grupo.</li>
                            <% } %>
                        </ul>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-info">Aún no se han creado grupos. Comience creando uno a la izquierda.</div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>