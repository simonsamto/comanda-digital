<%- include('../partials/header') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Gestión de Usuarios</h1>
            <a href="/admin/usuarios/nuevo" class="btn btn-primary">Crear Nuevo Usuario</a>
        </div>

        <!-- Bloque para mostrar mensajes de éxito o error -->
        <%- include('../partials/messages') %>

            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Correo Electrónico</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (usuarios.length> 0) { %>
                        <% usuarios.forEach(usuario=> { %>
                            <tr>
                                <td>
                                    <%= usuario.nombre %>
                                </td>
                                <td>
                                    <%= usuario.email %>
                                </td>
                                <td>
                                    <%= usuario.rol ? usuario.rol.nombre : 'Sin Rol' %>
                                </td>
                                <td>
                                    <!-- Muestra una insignia de color según el estado 'activo' -->
                                    <% if (usuario.activo) { %>
                                        <span class="badge bg-success">Activo</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactivo</span>
                                            <% } %>
                                </td>
                                <td>
                                    <a href="/admin/usuarios/editar/<%= usuario.id %>"
                                        class="btn btn-sm btn-warning">Editar</a>

                                    <!-- Formulario para cambiar el estado del usuario -->
                                    <form action="/admin/usuarios/estado/<%= usuario.id %>" method="POST"
                                        class="d-inline">
                                        <!-- El botón cambia de texto y color según el estado actual -->
                                        <% if (usuario.activo) { %>
                                            <button type="submit" class="btn btn-sm btn-danger">Desactivar</button>
                                            <% } else { %>
                                                <button type="submit" class="btn btn-sm btn-success">Activar</button>
                                                <% } %>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">No hay usuarios registrados.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
    </div>

    <%- include('../partials/footer') %>