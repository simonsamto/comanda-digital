<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2>Configurando: <strong><%= menu.nombre %></strong></h2>
            <p class="text-muted">Seleccione los componentes que estarán disponibles hoy para este menú.</p>
        </div>
        <a href="/admin/gestion-menu" class="btn btn-secondary">Volver a Menús</a>
    </div>

    <form action="/admin/menus/<%= menu.id %>/configurar" method="POST">
        <div class="card">
            <div class="card-body">
                <% if (!grupos || grupos.length === 0) { %>
                    <div class="alert alert-warning">No hay componentes creados en el sistema.</div>
                <% } else { %>
                    <div class="row">
                        <% grupos.forEach(grupo => { %>
                            <div class="col-md-4 col-lg-3 mb-4">
                                <h4><%= grupo.nombre %></h4>
                                <hr class="mt-0">
                                <% if (grupo.componentes && grupo.componentes.length > 0) { %>
                                    <% grupo.componentes.forEach(componente => { %>
                                        <div class="form-check">
                                            <input 
                                                class="form-check-input" 
                                                type="checkbox" 
                                                name="componenteIds" 
                                                value="<%= componente.id %>" 
                                                id="comp-<%= componente.id %>"
                                                <%= selectedComponentIds.has(componente.id) ? 'checked' : '' %>
                                            >
                                            <label class="form-check-label" for="comp-<%= componente.id %>">
                                                <%= componente.nombre %>
                                            </label>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-muted fst-italic">Sin componentes</p>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Guardar Configuración
                </button>
            </div>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>