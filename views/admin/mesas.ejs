<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Gestión de Mesas</h1>
        <a href="/admin/mesas/nueva" class="btn btn-primary">Añadir Nueva Mesa</a>
    </div>

    <%- include('../partials/messages') %>

    <div class="row">
        <% if (mesas.length > 0) { %>
            <% mesas.forEach(mesa => { %>
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card text-center">
                        <div class="card-header">
                            <strong><%= mesa.numero %></strong>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Capacidad: <%= mesa.capacidad %> personas</h5>
                        </div>
                        <div class="card-footer text-muted">
                            <a href="/admin/mesas/editar/<%= mesa.id %>" class="btn btn-sm btn-warning">Editar</a>
                            <form action="/admin/mesas/eliminar/<%= mesa.id %>" method="POST" class="d-inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta mesa?');">
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <p class="text-center">No hay mesas registradas. ¡Añade la primera!</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>