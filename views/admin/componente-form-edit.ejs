<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Editar Componente</h4>
                </div>
                <div class="card-body">
                    <form action="/admin/componentes/editar/<%= componente.id %>" method="POST">
                        
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="nombre" value="<%= componente.nombre %>" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Grupo</label>
                            <select class="form-select" name="grupo_id" required>
                                <% grupos.forEach(grupo => { %>
                                    <option value="<%= grupo.id %>" <%= componente.grupo_id == grupo.id ? 'selected' : '' %>>
                                        <%= grupo.nombre %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Precio Adicional</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" name="precio_adicional" 
                                       value="<%= parseFloat(componente.precio_adicional) %>" min="0" step="100">
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                            <a href="/admin/gestion-componentes" class="btn btn-light">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>