<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= pageTitle %></h1>
        <div class="btn-group">
            <button onclick="window.print()" class="btn btn-outline-dark"><i class="fas fa-print"></i> Imprimir</button>
            <a href="/admin/informes" class="btn btn-secondary">Volver</a>
        </div>
    </div>

    <!-- VISTA PARA REPORTE DE VENTAS (KAPEX) -->
    <% if (tipo === 'ventas') { %>
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="alert alert-success">
                    <h4 class="alert-heading">Ingresos Totales</h4>
                    <h1 class="display-4 fw-bold">$<%= resumen.totalIngresos.toLocaleString('es-CO') %></h1>
                </div>
            </div>
            <div class="col-md-6">
                <div class="alert alert-info">
                    <h4 class="alert-heading">Pedidos Atendidos</h4>
                    <h1 class="display-4 fw-bold"><%= resumen.totalPedidos %></h1>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th># Pedido</th>
                            <th>Fecha / Hora</th>
                            <th>Mesa (ID)</th>
                            <th class="text-end">Valor Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datos.forEach(dato => { %>
                            <tr>
                                <td><%= dato.id %></td>
                                <td><%= new Date(dato.fecha).toLocaleString() %></td>
                                <td><%= dato.mesa %></td>
                                <td class="text-end fw-bold">$<%= dato.total.toLocaleString('es-CO') %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    <% } %>

    <!-- VISTA PARA REPORTE DE RANKING -->
    <% if (tipo === 'ranking') { %>
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Posici√≥n</th>
                            <th>Nombre del Producto / Componente</th>
                            <th>Tipo</th>
                            <th class="text-center">Cantidad Vendida</th>
                            <th>Barra</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datos.forEach((dato, index) => { %>
                            <tr>
                                <td class="fw-bold"><%= index + 1 %></td>
                                <td><%= dato.nombre %></td>
                                <td><span class="badge bg-secondary"><%= dato.tipo %></span></td>
                                <td class="text-center fw-bold fs-5"><%= dato.cantidad %></td>
                                <td style="width: 30%;">
                                    <div class="progress" style="height: 20px;">
                                        <% let porcentaje = (dato.cantidad / datos[0].cantidad) * 100; %>
                                        <div class="progress-bar bg-success" role="progressbar" style="width: <%= porcentaje %>%;"></div>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>